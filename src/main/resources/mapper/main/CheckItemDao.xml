<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.CheckItemDao">
    <resultMap id="BaseResultMap" type="me.cuiyijie.joyea.model.CheckItem">

        <id property="id" column="id"/>
        <id property="checkModuleType" column="check_module_type"/>
        <id property="checkCategoryType" column="check_category_type"/>
        <id property="checkStageType" column="check_stage_type"/>
        <id property="checkName" column="check_name"/>
        <id property="checkStandard" column="check_standard"/>
        <id property="checkMethod" column="check_method"/>
        <id property="checkTool" column="check_tool"/>
        <id property="checkStandardFrom" column="check_standard_from"/>

        <id property="firstCheckVerifyType" column="first_check_verify_type"/>
        <id property="firstCheckVerifyResult" column="first_check_verify_result"/>
        <id property="firstCheckVerifySheetId" column="first_check_verify_sheet_id"/>
        <id property="firstCheckPersonId" column="first_check_person_id"/>

        <id property="secondCheckVerifyType" column="second_check_verify_type"/>
        <id property="secondCheckVerifyResult" column="second_check_verify_result"/>
        <id property="secondCheckVerifySheetId" column="second_check_verify_sheet_id"/>
        <id property="secondCheckPersonId" column="second_check_person_id"/>

        <id property="thirdCheckVerifyType" column="third_check_verify_type"/>
        <id property="thirdCheckVerifyResult" column="third_check_verify_result"/>
        <id property="thirdCheckVerifySheetId" column="third_check_verify_sheet_id"/>
        <id property="thirdCheckPersonId" column="third_check_person_id"/>

        <id property="createdAt" column="created_at"/>
        <id property="updatedAt" column="updated_at"/>

    </resultMap>

    <select id="listAll" resultMap="BaseResultMap">
        SELECT *
        FROM t_check_item
    </select>

    <insert id="insert">
        INSERT INTO t_check_item(check_module_type, check_category_type, check_stage_type, check_name,
                                 check_standard, check_method, check_tool, check_standard_from,
                                 first_check_verify_type, first_check_verify_result, first_check_verify_sheet_id,
                                 first_check_person_id,
                                 second_check_verify_type, second_check_verify_result, second_check_verify_sheet_id,
                                 second_check_person_id,
                                 third_check_verify_type, third_check_verify_result, third_check_verify_sheet_id,
                                 third_check_person_id, created_at)
        VALUES (#{item.checkModuleType}, #{item.checkCategoryType}, #{item.checkStageType}, #{item.checkName},
                #{item.checkStandard}, #{item.checkMethod}, #{item.checkTool}, #{item.checkStandardFrom},
                #{item.firstCheckVerifyType}, #{item.firstCheckVerifyResult}, #{item.firstCheckVerifySheetId},
                #{item.firstCheckPersonId},
                #{item.secondCheckVerifyType}, #{item.secondCheckVerifyResult}, #{item.secondCheckVerifySheetId},
                #{item.secondCheckPersonId},
                #{item.thirdCheckVerifyType}, #{item.thirdCheckVerifyResult}, #{item.thirdCheckVerifySheetId},
                #{item.thirdCheckPersonId},
                NOW())
    </insert>

    <update id="update">
        UPDATE t_check_item
        <set>
            <if test="item.checkModuleType != null and item.checkModuleType != ''">
                check_module_type = #{item.checkModuleType},
            </if>
            <if test="item.checkCategoryType != null and item.checkCategoryType != ''">
                check_category_type = #{item.checkCategoryType},
            </if>
            <if test="item.checkStageType != null and item.checkStageType != ''">
                check_stage_type = #{item.checkStageType},
            </if>
            <if test="item.checkName != null and item.checkName != ''">
                check_name = #{item.checkName},
            </if>
            <if test="item.checkStandard != null and item.checkStandard != ''">
                check_standard = #{item.checkStandard},
            </if>
            <if test="item.checkMethod != null and item.checkMethod != ''">
                check_method = #{item.checkMethod},
            </if>
            <if test="item.checkTool != null and item.checkTool != ''">
                check_tool = #{item.checkTool},
            </if>
            <if test="item.checkStandardFrom != null and item.checkStandardFrom != ''">
                check_standard_from = #{item.checkStandardFrom},
            </if>
            <if test="item.firstCheckVerifyType != null and item.firstCheckVerifyType != ''">
                first_check_verify_type = #{item.firstCheckVerifyType},
            </if>
            <if test="item.firstCheckVerifyResult != null and item.firstCheckVerifyResult != ''">
                first_check_verify_result = #{item.firstCheckVerifyResult},
            </if>
            <if test="item.firstCheckVerifySheetId != null and item.firstCheckVerifySheetId != ''">
                first_check_verify_sheet_id = #{item.firstCheckVerifySheetId},
            </if>
            <if test="item.firstCheckPersonId != null and item.firstCheckPersonId != ''">
                first_check_person_id = #{item.firstCheckPersonId},
            </if>
            <if test="item.secondCheckVerifyType != null and item.secondCheckVerifyType != ''">
                second_check_verify_type = #{item.secondCheckVerifyType},
            </if>
            <if test="item.secondCheckVerifyResult != null and item.secondCheckVerifyResult != ''">
                second_check_verify_result = #{item.secondCheckVerifyResult},
            </if>
            <if test="item.secondCheckVerifySheetId != null and item.secondCheckVerifySheetId != ''">
                second_check_verify_sheet_id = #{item.secondCheckVerifySheetId},
            </if>
            <if test="item.secondCheckPersonId != null and item.secondCheckPersonId != ''">
                second_check_person_id = #{item.secondCheckPersonId},
            </if>
            <if test="item.thirdCheckVerifyType != null and item.thirdCheckVerifyType != ''">
                third_check_verify_type = #{item.thirdCheckVerifyType},
            </if>
            <if test="item.thirdCheckVerifyResult != null and item.thirdCheckVerifyResult != ''">
                third_check_verify_result = #{item.thirdCheckVerifyResult},
            </if>
            <if test="item.thirdCheckVerifySheetId != null and item.thirdCheckVerifySheetId != ''">
                third_check_verify_sheet_id = #{item.thirdCheckVerifySheetId},
            </if>
            <if test="item.thirdCheckPersonId != null and item.thirdCheckPersonId != ''">
                third_check_person_id = #{item.thirdCheckPersonId},
            </if>
            updated_at = NOW()
        </set>
        WHERE id = #{item.id}
    </update>

    <delete id="delete">
        DELETE
        FROM t_check_item
        WHERE id = #{item.id}
    </delete>

</mapper>