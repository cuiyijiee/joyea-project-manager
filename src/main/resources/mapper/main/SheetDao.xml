<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.SheetDao">


    <insert id="insert">
        INSERT INTO t_sheet (name)
        VALUES (#{item.name})
    </insert>

    <select id="findAll" resultType="me.cuiyijie.joyea.model.Sheet">
        SELECT id AS id,
        name AS name
        FROM t_sheet
        WHERE 1=1
        <if test="item.id != null">
            AND id = #{item.id}
        </if>
        <if test="item.name != null and item.name != ''">
            AND name = #{item.name}
        </if>
        <if test="item.category != null and item.category != ''">
            AND name = #{item.category}
        </if>
    </select>

    <select id="listAllCategory" resultType="java.lang.String">
        SELECT category
        FROM t_sheet
        GROUP BY category
    </select>

    <update id="update">
        UPDATE t_sheet
        SET name = #{item.name}
        WHERE id = #{item.id}
    </update>

    <delete id="delete">
        DELETE
        FROM t_sheet
        WHERE id = #{item.id}
    </delete>

</mapper>