<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.JoyeaProjectTemplateOperationDao">


    <insert id="insert">
        INSERT INTO project_template_operation (template_id, operation_id, operation_no)
        VALUES (#{item.templateId},
                #{item.operationId},
                #{item.operationNo})
    </insert>

    <select id="findByTemplateId" resultType="me.cuiyijie.joyea.domain.JoyeaProjectTemplateOperation">
        SELECT id AS id,
        template_id AS templateId,
        operation_id AS operationId,
        operation_no AS operationNo
        FROM project_template_operation
        WHERE 1=1
        <if test="item.templateId != null and item.templateId != ''">
            AND template_id = #{item.templateId}
        </if>
        <!--        <if test="item.name != null and item.name != ''">-->
        <!--            AND name = #{item.name}-->
        <!--        </if>-->
        <!--        <if test="item.category != null and item.category != ''">-->
        <!--            AND name = #{item.category}-->
        <!--        </if>-->
    </select>

    <!--    <update id="update">-->
    <!--        UPDATE sheet-->
    <!--        SET name = #{item.name}-->
    <!--        WHERE id = #{item.id}-->
    <!--    </update>-->

    <delete id="delete">
        DELETE
        FROM project_template_operation
        WHERE id = #{item.id}
    </delete>

</mapper>