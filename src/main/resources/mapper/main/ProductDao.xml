<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.ProductDao">
    <resultMap id="BaseResultMap" type="me.cuiyijie.joyea.model.Product">

        <id property="id" column="id"/>
        <id property="projectId" column="project_id"/>
        <id property="productName" column="product_name"/>
        <id property="productNumber" column="product_number"/>
        <id property="productionNumber" column="production_number"/>
        <id property="createdAt" column="created_at"/>
        <id property="updatedAt" column="updated_at"/>

    </resultMap>

    <select id="list" resultMap="BaseResultMap">
        SELECT *
        from t_product
        WHERE 1=1
        <if test="item.projectId != null and item.projectId != ''">
            AND project_id = #{item.projectId}
        </if>
        <if test="item.productName != null and item.productName != ''">
            AND product_name = #{item.productName}
        </if>
        <if test="item.productNumber != null and item.productNumber != ''">
            AND product_number = #{item.productNumber}
        </if>
        <if test="item.productionNumber != null and item.productionNumber != ''">
            production_number = #{productionNumber}
        </if>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_product(project_id, product_name, product_number,production_number, created_at)
        VALUES (#{item.projectId},
                #{item.productName},
                #{item.productNumber},
                #{item.productionNumber},
                NOW())
    </insert>

    <delete id="delete" >
        DELETE t_proejct
        WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE t_product
        <set>
            <if test="item.projectId != null and item.projectId != ''">
                project_id = #{item.projectId},
            </if>
            <if test="item.productName != null and item.productName != ''">
                product_name = #{item.productName},
            </if>
            <if test="item.productNumber != null and item.productNumber != ''">
                product_number = #{item.productNumber},
            </if>
            <if test="item.productionNumber != null and item.productionNumber != ''">
                production_number = #{productionNumber},
            </if>
        </set>
        WHERE id = #{item.id}
    </update>

</mapper>