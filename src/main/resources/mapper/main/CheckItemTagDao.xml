<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.CheckItemTagDao">
    <resultMap id="BaseResultMap" type="me.cuiyijie.joyea.model.CheckItemTag">

        <id property="id" column="id"/>
        <id property="tagName" column="tag_name"/>
        <id property="tagType" column="tag_type"/>
        <id property="createdAt" column="created_at"/>
        <id property="updatedAt" column="updated_at"/>

    </resultMap>

    <select id="list" resultMap="BaseResultMap">
        SELECT *
        FROM t_checkitem_tag
        WHERE 1=1
        <if test="item.id != null">
            AND id = #{item.id}
        </if>
        <if test="item.tagName != null and item.tagName != ''">
            AND tag_name = #{item.tagName}
        </if>
        <if test="item.tagType != null">
            AND tag_type = #{item.tagType}
        </if>
    </select>

    <insert id="insert">
        INSERT INTO t_checkitem_tag(tag_name, tag_type, created_at)
        VALUES (#{item.tagName},
                #{item.tagType},
                NOW())
    </insert>

    <update id="update">
        UPDATE t_checkitem_tag
        <set>
            <if test="item.tagName != null and item.tagName != ''">
                tag_name = #{item.tagName},
            </if>
            <if test="item.tagType != null and item.tagType != ''">
                tag_type = #{item.tagType},
            </if>
            updated_at = NOW()
        </set>
        WHERE id = #{item.id}
    </update>

    <delete id="delete">
        DELETE
        FROM t_checkitem_tag
        WHERE id = #{item.id}
    </delete>

    <select id="getTagRelNum" resultType="java.lang.Integer">
        SELECT count(1)
        FROM t_checkitem_tag_rel
        WHERE checkitem_tag_id = #{item.id}
    </select>

    <select id="selectByTypeAndName" resultMap="BaseResultMap">
        SELECT *
        FROM t_checkitem_tag
        WHERE tag_type = #{tagType}
          AND tag_name = #{tagName}
    </select>

</mapper>