<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.CheckItemTagDao">
    <resultMap id="BaseResultMap" type="me.cuiyijie.joyea.model.CheckItemTag">

        <id property="id" column="id"/>
        <id property="checkItemId" column="check_item_id"/>
        <id property="tagName" column="tag_name"/>
        <id property="tagType" column="tag_type"/>
        <id property="createdAt" column="created_at"/>
        <id property="updatedAt" column="updated_at"/>

    </resultMap>

    <select id="listAll" resultMap="BaseResultMap">
        SELECT *
        FROM t_check_item_tag
        WHERE 1=1
        <if test="item.checkItemId != null and item.checkItemId != ''" >
            AND check_item_id = #{item.checkItemId}
        </if>
    </select>

    <insert id="insert">
        INSERT INTO t_check_item_tag(check_item_id, tag_name, tag_type, created_at)
        VALUES (#{item.checkItemId},
                #{item.tagName},
                #{item.tagType},
                NOW())
    </insert>

    <update id="update">
        UPDATE t_check_item_tag
        <set>
            <if test="item.checkItemId != null and item.checkItemId != ''">
                check_item_id = #{item.checkItemId},
            </if>
            <if test="item.tagName != null and item.tagName != ''">
                tag_name = #{item.tagName},
            </if>
            <if test="item.tagType != null and item.tagType != ''">
                tag_type = #{item.tagType},
            </if>
            updated_at = NOW()
        </set>
        WHERE id = #{item.id}
    </update>

    <delete id="delete">
        DELETE FROM t_check_item_tag
        WHERE id = #{item.id}
    </delete>

</mapper>