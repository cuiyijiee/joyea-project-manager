<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.NextPlusUserProfileDao">
    <resultMap id="BaseResultMap" type="me.cuiyijie.joyea.pojo.NextPlusUserProfile">

        <id property="id" column="id"/>
        <id property="name" column="name"/>
        <id property="phone" column="phone"/>
        <id property="ytmId" column="ytm_id"/>
        <id property="ytmOpenId" column="ytm_open_id"/>
        <id property="tenantId" column="tenant_id"/>
        <id property="lastLoginTime" column="last_login_time"/>

    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT *
        FROM t_joyea_user
        WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO t_joyea_user(id, name, phone, ytm_id, ytm_open_id, tenant_id, last_login_time)
        VALUES (#{item.id},
                #{item.name},
                #{item.phone},
                #{item.ytmId},
                #{item.ytmOpenId},
                #{item.tenantId}, NOW())
    </insert>

    <update id="update">
        UPDATE t_joyea_user
        <set>
            <if test="item.name != null and item.name != ''">
                name = #{item.name},
            </if>
            <if test="item.phone != null and item.phone != ''">
                phone = #{item.phone},
            </if>
            <if test="item.ytmId != null and item.ytmId != ''">
                ytm_id = #{item.ytmId},
            </if>
            <if test="item.ytmOpenId != null and item.ytmOpenId != ''">
                ytm_open_id = #{item.ytmOpenId},
            </if>
            <if test="item.tenantId != null and item.tenantId != ''">
                tenant_id = #{item.tenantId},
            </if>
            last_login_time = NOW()
        </set>
        WHERE id = #{item.id}
    </update>

</mapper>