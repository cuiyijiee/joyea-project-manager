<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.CheckItemRecordDao">
    <resultMap id="BaseResultMap" type="me.cuiyijie.joyea.model.CheckItemRecord">
        <id property="id" column="id"/>
        <id property="stageRelId" column="stage_rel_id"/>
        <id property="checkItemId" column="checkitem_id"/>
        <id property="operationId" column="operation_id"/>
        <id property="checkRecord" column="check_record"/>
        <id property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO t_checkitem_record(stage_rel_id, checkitem_id, operator_id, check_record, created_at)
        VALUES (#{item.stageRelId},
                #{item.checkItemId},
                #{item.checkItemId},
                #{item.checkRecord},
                NOW())
    </insert>

    <select id="select" resultMap="BaseResultMap">
        SELECT *
        FROM t_checkitem_record
        WHERE stage_rel_id = #{item.stageRelId}
          AND checkitem_id = #{item.checkItemId}
    </select>
</mapper>