<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.cuiyijie.joyea.dao.main.TestSheetDao">

    <resultMap id="BaseResultMap" type="me.cuiyijie.joyea.domain.TestSheet">

        <id property="id" column="id"/>
        <id property="name_1" column="name_1"/>
        <id property="name_2" column="name_2"/>

    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT t1.*, group_concat(t2.name_2) name_2
        FROM test_1 t1
                 LEFT JOIN test_2 t2 ON t1.id = t2.index_id
        WHERE t1.id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO test_sheet(test_name, test_type)
        VALUES (#{item.testName},
                #{item.testType})
    </insert>

</mapper>